<!DOCTYPE html>
<html>
  <head>
    <title>Zuzman</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <p class="notice"><%= notice %></p>
   <p class="alert"><%= alert %></p> 
   <%= link_to "Ana Sayfa", root_path %>
   <%= link_to "Bloglar", blogs_path %>   
   <% if user_signed_in? %>
   <%= link_to "Cikis Yap", destroy_user_session_path, method: :delete %>
   <% else %>
   <%= link_to "Giris Yap", new_user_session_path %>
   <%= link_to "Uye Ol", new_user_registration_path %>
   <% end %>

   
   <%= yield %>
  </body>
</html>
