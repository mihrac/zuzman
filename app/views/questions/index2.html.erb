<h1>Questions</h1>

  
 <div class="container">      </div>

  <div class="container">
    <% @questions.each do |question| %>
      
      <%= question.get_upvotes.size %>
        <h3><%= question.qtitle %></h3>
        <p><%= question.qtext %></p>
        <p><%= question.category.cat_name %></p>
        <p><%= question.sub_category.sub_cat_name %></p>
         <p><%= question.user.email %></p>
        <p><%= link_to 'Show', question %></p>
        <p><%= link_to "upvote", like_question_path(question), method: :put %></p>
        <p><%= link_to "downvote", dislike_question_path(question), method: :put %></p>
        <% if question.user == current_user %>
        <p><%= link_to 'Edit', edit_question_path(question) %></p>
        <p><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></p>        


        <% end %>
