<p id="notice"><%= notice %></p>

<p>
  <strong>Btitle:</strong>
  <%= @blog.btitle %>
</p>

<p>
  <strong>Btext:</strong>
  <%= @blog.btext %>
</p>



<p>
  <strong>Bapproved:</strong>
  <%= @blog.bapproved %>
</p>

<p>
  <strong>User:</strong>
  <%= @blog.user.email %>
</p>

<p>
  <strong>Category:</strong>
  <%= @blog.category.cat_name %>
</p>

<p>
  <strong>Sub category:</strong>
  <%= @blog.sub_category.sub_cat_name %>
</p>

<%= link_to 'Edit', edit_blog_path(@blog) %> |
<%= link_to 'Back', blogs_path %>

<h3>Comments</h3>

<%= form_for [@blog, Comment.new] do |f| %>
<%= f.text_area :body, placeholder: "Add a comment" %><br/>
<%= f.submit "Add Comment" %>
<% end %>

<ul>
  <%= render(partial: 'comments/comment', collection: @blog.comments) %>
</ul>